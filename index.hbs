<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="*">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Recursive:wght,CASL,MONO@300..700,0.1,0.5&display=swap">
  <link rel="stylesheet" href="./styles/index.css">
  {{#if css}}
    <style>{{css}}</style>
  {{/if}}
  <title>Resume | xuerzong</title>
  <meta name="description" content="xuerzong's resume">
</head>

<body>
  <main id="resume">
    <section class="base section" aria-label="base-info">
      <h1 class="base-name">
        {{base.name}}
      </h1>

      <ul class="base-social">
        {{#if base.phone}}
        <li title="{{base.phone}}">
          <span class="base-social-item">
            <span class="social-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                />
              </svg>
            </span>
            <span>{{base.phone}}</span>
          </span>
        </li>
        {{/if}}

        {{#if base.email}}
        <li title="{{base.email}}">
          <span class="base-social-item">
            <span class="social-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                />
              </svg>
            </span>
            <span>{{base.email}}</span>
          </span>
        </li>
        {{/if}}

        {{#if base.website}}
        <li title="{{base.website}}">
          <span class="base-social-item">
            <span class="social-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </span>
            <span>{{base.website}}</span>
          </span>
        </li>
        {{/if}}
      </ul>
    </section>

    {{#if education-experience}}
      <section class="edu-exp section">
        <h2 class="section-title">教育经历</h2>
  
        <ul class="exp-container">
          {{#each education-experience}}
            <li class="exp-wrapper">
              <span class="exp-timeline">
                <time>
                  {{formatTime end-time}}
                </time>
                <time>
                  {{formatTime start-time}}
                </time>
              </span>
              <div class="exp-content">
                <h3 class="exp-title">{{name}}</h3>
                <div class="exp-subtitle">
                  <span>{{school}}</span>                  
                  <span>{{major}}</span>
                  <span>{{other}}</span>
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
      </section>
    {{/if}}

    <section class="exp section">
      <h2 class="section-title">工作经历</h2>

      <ul class="exp-container">
        {{#each work-experience}}
          <li class="exp-wrapper">
            <span class="exp-timeline">
              <time>
                {{formatTime end-time}}
              </time>
              <time>
                {{formatTime start-time}}
              </time>
            </span>
            <div class="exp-content">
              <h3 class="exp-title">{{company-name}}</h3>
              <div class="exp-subtitle">
                <span>{{position}}</span>                  
                <span>{{club}}</span>
              </div>
  
              {{#if content}}
                <p class="exp-summary">
                  {{summary}}
                </p>
              {{/if}}
              {{#if highlights}}
                <ul class="exp-highlights">
                  {{#each highlights}}
                    <li title="{{.}}" > {{.}} </li>
                  {{/each}}
                </ul>
              {{/if}}
            </div>
          </li>
        {{/each}}
      </ul>
    </section>
  </main>

  {{#if pdf}}
  <a target="_blank" href="{{pdf.url}}" class="pdf-view">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="pdf-icon"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
      />
    </svg>
    {{pdf.label}}
  </a>
  {{/if}}
</body>

</html>